@model ConnectionForm
<form asp-action="Connect" asp-controller="DirectoryInformation">
	<input asp-for="ReturnUrl" type="hidden" value="@(Context.Request.Path + Context.Request.QueryString)" />
	<div class="form-row">
		<div class="form-group col-md-10">
			<label asp-for="RootDistinguishedName">Root distinguished-name</label>
			<input asp-for="RootDistinguishedName" class="form-control" required="required" type="text" />
		</div>
		<div class="form-group col-md-2">
			<label asp-for="Timeout">Timeout</label>
			<input asp-for="Timeout" class="form-control" type="number" />
			<small class="form-text text-muted">Timeout in minutes.</small>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="Attributes">Attributes</label>
			<input asp-for="Attributes" class="form-control" type="text" />
			<small class="form-text text-muted">Comma-separated list of attributes.</small>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="Filter">Filter</label>
			<input asp-for="Filter" class="form-control" type="text" />
		</div>
	</div>
	<div class="form-group">
		<div class="form-check">
			<input asp-for="ClearBaseFilter" class="form-check-input" type="checkbox" />
			<label asp-for="ClearBaseFilter" class="form-check-label">Clear base filter</label>
		</div>
	</div>
	<button class="btn btn-outline-success" type="submit">Connect</button>
</form>