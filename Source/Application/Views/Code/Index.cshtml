@model CodeViewModel
@{ ViewBag.Heading = "Code"; }
<h1 class="h4">@ViewBag.Heading</h1>
<hr />
@if(Model.Exception != null)
{
	<div class="alert alert-danger">
		<h2 class="h5">Error</h2>
		<p>@Model.Exception</p>
	</div>
}
else if(Model.Code != null)
{
	<div aria-hidden="true" aria-labelledby="code-modal-heading" class="modal fade" data-backdrop="static" data-keyboard="false" data-modal-initially-open="true" id="code-modal" tabindex="-1">
		<div class="modal-dialog modal-lg modal-dialog-scrollable">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="code-modal-heading">Code</h5>
					<button aria-label="Close" class="close" data-dismiss="modal" type="button">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<pre>@Model.Code</pre>
				</div>
				<div class="modal-footer">
					<button class="btn btn-primary" data-dismiss="modal" type="button">Close</button>
				</div>
			</div>
		</div>
	</div>
}
<partial model="@Model.Form" name="Form" />